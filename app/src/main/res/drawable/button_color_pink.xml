<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/dark_custom_gray" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270" 
                android:startColor="@color/light_custom_color_pink" 
                android:centerColor="@color/dark_custom_color_pink" 
                android:endColor="@color/light_custom_color_pink" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270" 
                android:startColor="@color/dark_custom_color_pink" 
                android:centerColor="@color/light_custom_color_pink" 
                android:endColor="@color/dark_custom_color_pink" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape></item>
</selector>
